@model CITB517_WebApplication.Models.Register
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" , href="~/css/register.css">
    <title>Register</title>
</head>
<body>
    <div id="maindiv">
        <div id="imgdiv">
            <img src="~/img/logos/MountainsClipart.png" alt="Clipart" title="Mountains Clipart" />
        </div>
        <div id="formdiv">
            <form autocomplete="off" asp-controller="User" asp-action="Register">
                <h3>Register</h3>
                <label for="username">Username: </label>
                <input type="text" id="username" asp-for="UserName"><br><br>
                <label for="email">Email: </label>
                <input type="text" id="email" asp-for="Email"><br><br>
                <label for="password">Password: </label>
                <input type="password" id="password" asp-for="Password"><br><br>
                <input id="submit_btn" type="submit" value="Submit"><br><br>
                <a asp-controller="Home" asp-action="Login">Already have an account?</a>
            </form>
        </div>
    </div>
</body>
</html>